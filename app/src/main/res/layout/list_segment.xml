<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/list_seg_master_layout">

    <TextView
        android:id="@+id/segment_title"
            tools:text="Article Title preview example after ListView loading and inflation"
        style="@style/article_title_textvu" />

    <TextView
        android:id="@+id/author"
        tools:text="Author of News Article"
        style="@style/author_txtvu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            tools:text="Published Date"
            style="@style/date_txtvu" />

        <TextView
            android:id="@+id/section_name"
            tools:text="Section Name"
            style="@style/sect_name_txtvu" />

    </RelativeLayout>

</LinearLayout>